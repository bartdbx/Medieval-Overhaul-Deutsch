  <!--=============== Rox horn ====================-->
  
  <ThingDef ParentName="ResourceVerbBase">
    <defName>DankPyon_RoxHorn</defName>
    <label>Rox Horn</label>
    <description>Ein Rox-Horn. Es ist schwer, steinhart und auf den meisten Märkten unbezahlbar. Dies ist eine echte Trophäe, die von den besten Jägern gesucht wird.</description>
			<graphicData>
			<texPath>Special/RoxHorn</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-20</equippedAngleOffset>

		<statBases>
			<MarketValue>100</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.5</Flammability>
			<DeteriorationRate>0.5</DeteriorationRate>
		</statBases>

		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>10</stackLimit>
		<relicChance>2</relicChance>

		<comps>
			<li Class="CompProperties_Styleable"></li>
		</comps>
		<weaponClasses>
			<li>Melee</li>
			<li>MeleeBlunt</li>
		</weaponClasses>
		<tools>
		<li>
			<label>ram</label>
			<capacities>
			<li>Blunt</li>
			</capacities>
			<power>16.2</power>
			<cooldownTime>2.7</cooldownTime>
		</li>
		<li>
			<label>base</label>
			<capacities>
			<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
			<chanceFactor>0.5</chanceFactor>
		</li>
		</tools>
		<thingCategories>
			<li>Items</li>
		</thingCategories>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>AnimalPart</li>
		</thingSetMakerTags>
	</ThingDef>

