    <settlementTexturePath>WorldObjects/MedievalSettlement</settlementTexturePath>

    <permanentEnemy>true</permanentEnemy>
    <hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
  </FactionDef>

<FactionDef ParentName="DankPyon_BrigandFactionBase">
    <defName>DankPyon_BrigandFaction</defName>
    <label>Banditen</label>
    <description>Räuber und Plünderer, die Gesetze sind nichts für sie. Räuber sind häufig anzutreffen, wenn sie mit bösen Absichten in nahe gelegene Siedlungen eindringen.</description>
    <colorSpectrum>
        <li>(0.85, 0, 0)</li>
        <li>(1, 0.1, 0.1)</li>
    </colorSpectrum>
    <factionIconPath>WorldObjects/Bandit</factionIconPath>
    
    <requiredMemes>
        <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
    </requiredMemes>
    <disallowedMemes>
        <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
        <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>60</configurationListOrderPriority>
</FactionDef>


</Defs>