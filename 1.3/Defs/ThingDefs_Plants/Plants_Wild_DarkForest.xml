	<ThingDef ParentName="TreeBase">
		<defName>DankPyon_GreatFir</defName>
		<label>Großfir</label>
		<description>Dreihundert Fuß hohe riesige Cousins aus Zedern. Diese Bäume werden oft als die letzten Wächter des Sommers bezeichnet, immergrüne Streifen von hoffnungsvoller Farbe, die sich vom Schnee abheben. Seien Sie vorsichtig, wenn Sie einen engen Tannenwald durchqueren, da die 10-Zoll-Kegel sogar einen Ritter in voller Rüstung niederschlagen können.</description>
		<graphicData>
			<texPath>Plants/GreatFir</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Pawn</altitudeLayer>
		<statBases>
			<Beauty>4</Beauty>
			<MaxHitPoints>250</MaxHitPoints>
			<Flammability>0.7</Flammability>
		</statBases>
		<plant>
		<dieIfLeafless>False</dieIfLeafless> 
			<fertilityMin>0.4</fertilityMin>
			<growDays>18</growDays>
			<harvestWork>2000</harvestWork>
			<harvestYield>150</harvestYield>
			<wildClusterWeight>32</wildClusterWeight>
			<wildClusterRadius>5</wildClusterRadius>
			<visualSizeRange>3~5</visualSizeRange>
		</plant>
		<modExtensions>
			<li Class="DankPyon.PlantExtension">
				<transparencyWhenPawnOrItemIsBehind>true</transparencyWhenPawnOrItemIsBehind>
				<firstAreaOffset>(-1, 0)</firstAreaOffset>
				<firstArea>(3, 3)</firstArea>
				<secondAreaOffset>(0, 3)</secondAreaOffset>
				<secondArea>(1, 2)</secondArea>
				<ignoredThings>
					<li>ChunkMarble</li>
					<li>ChunkGranite</li>
					<li>ChunkSandstone</li>
					<li>ChunkLimestone</li>
				</ignoredThings>
			</li>
				<li Class="VanillaPlantsExpanded.DualCropExtension">
				<secondaryOutput>DankPyon_Amber</secondaryOutput>
				<outPutAmount>2</outPutAmount>
			</li>
		</modExtensions>
	</ThingDef>
	
<ThingDef ParentName="DeciduousTreeBase">
    <defName>DankPyon_GreatWillow</defName>
    <label>Großweide</label>
    <description>Ein Weidenbaum, der es geschafft hat, Tausende von Jahre zu überleben.</description>
    <graphicData>
      <texPath>Plants/GreatWillow</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.3, 0.13)</volume>
        <offset>(0,0,-0.44)</offset>
      </shadowData>
      <shaderParameters>
        <_FallColorSource>(0.373, 0.427, 0.313)</_FallColorSource>
        <_FallTransitionRange>(0.02, 0.14)</_FallTransitionRange>
      </shaderParameters>
    </graphicData>
    <statBases>
      <Beauty>15</Beauty>
    </statBases>
    <plant>
		<dieIfLeafless>False</dieIfLeafless> 
		<growDays>200</growDays>
		<leaflessGraphicPath>Plants_Leafless/GreatWillow_Leafless</leaflessGraphicPath>
		<harvestWork>2000</harvestWork>
		<harvestYield>100</harvestYield>
		<wildClusterWeight>32</wildClusterWeight>
		<wildClusterRadius>5</wildClusterRadius>
		<visualSizeRange>6~9</visualSizeRange>
    </plant>

