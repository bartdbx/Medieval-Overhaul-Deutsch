<Defs>
    <ThingDef ParentName="DankPyon_RuinedBuildingBase">
        <defName>DankPyon_HatchedClutch</defName>
        <label>großes Biestnest</label>
        <description>Ein gigantisches Ei, das geschlüpft ist, was auch immer darin war, ist ein riesiges Biest.</description>
        <graphicData>
            <texPath>Buildings/SnakeLair/HatchedClutchLarge</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <drawSize>(4,4)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <rotatable>false</rotatable>

        <fillPercent>0.2</fillPercent>
        <pathCost>42</pathCost>
        
        <costList>
            <DankPyon_Bone>40</DankPyon_Bone>
        </costList>

        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <Mass>10</Mass>
            <WorkToBuild>200</WorkToBuild>
            <Flammability>0.2</Flammability>
        </statBases>
        <size>(2,2)</size>

        <staticSunShadowHeight>0.5</staticSunShadowHeight>
        <castEdgeShadows>false</castEdgeShadows>
        <surfaceType>Item</surfaceType>
    </ThingDef>


