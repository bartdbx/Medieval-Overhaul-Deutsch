<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!--========================= Doors =============================-->
  <ThingDef ParentName="DoorBase">
    <defName>DankPyon_RusticDoor</defName>
    <label>Tür, rustikal</label>
    <description>Teilt Räume. Einfache Türen müssen manuell geöffnet werden, was die Menschen verlangsamt. Die Verlangsamung hängt davon ab, woraus die Tür besteht.</description>
    <statBases>
      <WorkToBuild>850</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Buildings/RusticDoor_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <stuffCategories Inherit="False">
      <li>Woody</li>
    </stuffCategories>
    <uiIconPath>Buildings/RusticDoor_MenuIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

  <ThingDef ParentName="DoorBase">
    <defName>DankPyon_Gate</defName>
    <label>Tor</label>
    <description>Ein verstärktes Tor, das Räume teilt. Einfache Tore müssen manuell geöffnet werden, was die Menschen verlangsamt. Der Grad der Verlangsamung hängt davon ab, woraus das Tor besteht.</description>
    <statBases>
  <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Buildings/Gate_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>

        <enabled>false</enabled>
      </damageData>
    </graphicData>

    <stuffCategories Inherit="False">
      <li>Metallic</li>
    <li>Woody</li>
    </stuffCategories>
    <uiIconPath>Buildings/Gate_MenuIcon</uiIconPath>
    <costStuffCount>35</costStuffCount>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>

	 <ThingDef ParentName="DoorBase">
    <defName>DankPyon_SlabDoor</defName>
    <label>Steinblocktür</label>
    <description>Ein Steinblock, der zu einer langsamen und schweren Tür umfunktioniert wurde. Einfache Türen müssen manuell geöffnet werden, was die Menschen verlangsamt. Der Grad der Verlangsamung hängt davon ab, woraus das Tor besteht.</description>
    <statBases>
      <MaxHitPoints>320</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <DoorOpenSpeed>0.4</DoorOpenSpeed>
    </statBases>
    <graphicData>
      <texPath>Buildings/SlabDoor_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>

    <stuffCategories Inherit="False">
      <li>Stony</li>
    </stuffCategories>
    <uiIconPath>Buildings/SlabDoor_MenuIcon</uiIconPath>
    <costStuffCount>55</costStuffCount>
    <designationHotKey>Misc1</designationHotKey>
  </ThingDef>
<!--========================= Column =============================-->
  <ThingDef ParentName="BuildingBase">
    <defName>DankPyon_RoyalColumn</defName>
    <label>Säule, königlich</label>
    <description>Eine schöne, goldbeschlagene Säule, die ein Dach halten kann. Blockiert weder Sicht noch Bewegung und sieht ganz nett aus.</description>
    <designationCategory>Structure</designationCategory>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.25</fillPercent>
    <pathCost>0</pathCost>

    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToBuild>7500</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>30</Beauty>
    </statBases>

    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <costList>
      <Gold>20</Gold>
    </costList>

    <holdsRoof>true</holdsRoof>
    <canOverlapZones>false</canOverlapZones>
    <rotatable>false</rotatable>
    <fertility>0</fertility>
    <specialDisplayRadius>6.9</specialDisplayRadius> <!-- must be kept in sync with roof hold-up radius -->
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
    </building>

    <graphicData>
      <drawSize>(1,1.25)</drawSize>
      <drawOffset>(0,0,0.2)</drawOffset>
      <texPath>Furniture/RoyalColumn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
 </ThingDef>

  <!--========================= Walls =============================-->

  <ThingDef ParentName="BuildingBase" Name="Wall">
    <defName>DankPyon_Palisade</defName>
    <label>Palisaden</label>
    <description>Eine unüberwindbare Mauer.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Buildings/Linked/Palisade_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
				<li>Fences</li>
			</linkFlags>
    </graphicData>
    <uiIconPath>Buildings/Linked/Palisade_MenuIcon</uiIconPath>
   
    <statBases>
      <MaxHitPoints>450</MaxHitPoints>
      <WorkToBuild>355</WorkToBuild>
      <Flammability>1.0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <costStuffCount>8</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>false</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded> <!-- Best affordance needed for stone -->
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>0.8</staticSunShadowHeight>
    <blockLight>false</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <building>
      <isInert>true</isInert>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Buildings/Linked/Palisade_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
      <relatedBuildCommands>
        <li>Door</li>
        <li>Autodoor</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase" Name="DankPyon_SpikeBase">
	 <defName>DankPyon_CavalrySpike</defName>
    <label>Holzspieße für die Kavallerie</label>
    <description>Eine organisierte Ansammlung von Pfählen, die Eindringlinge fernhalten sollen. n/n/Wenn man durch die Pfähle läuft, können die Bauern verletzt werden..</description>
    <thingClass>Building_TrapDamager</thingClass>
    <category>Building</category>
    <graphicData>
     <texPath>Buildings/Linked/Spike_Atlas</texPath>
     <graphicClass>Graphic_Single</graphicClass>
     <linkType>Basic</linkType>
	  <linkFlags>
		  <li>Custom4</li>
	  </linkFlags>
    </graphicData>

    <costList>
      <WoodLog>8</WoodLog>
    </costList>

    <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
	  <blockLight>false</blockLight>
    <uiIconPath>Buildings/Linked/Spike_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>150</pathCost>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.30</fillPercent>
    <coversFloor>false</coversFloor>
	  <holdsRoof>false</holdsRoof>
	  <castEdgeShadows>false</castEdgeShadows>
	  <tickerType>Normal</tickerType>    
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <TrapMeleeDamage>10</TrapMeleeDamage>
      <TrapSpringChance>0.8</TrapSpringChance>
      <MaxHitPoints>100</MaxHitPoints>
      <Beauty>-10</Beauty>
      <WorkToBuild>75</WorkToBuild>
      <Flammability>0.8</Flammability>
    </statBases>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>	

    <building>
      <allowAutoroof>false</allowAutoroof>
	    <isTrap>true</isTrap>
      <trapDestroyOnSpring>false</trapDestroyOnSpring>		  
	    <trapDamageCategory>Sharp</trapDamageCategory>
	    <ai_chillDestination>false</ai_chillDestination>
	    <expandHomeArea>false</expandHomeArea>	
      <isInert>true</isInert>
      <blueprintGraphicData>
        <texPath>Buildings/Linked/Spike_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>

    <placingDraggableDimensions>1</placingDraggableDimensions>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
	  <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <repairEffect>ConstructWood</repairEffect>

    <designatorDropdown>DankPyon_CavalrySpikeWalls</designatorDropdown>
	</ThingDef>

