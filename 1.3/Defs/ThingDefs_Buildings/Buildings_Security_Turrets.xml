<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Ballista -->
  <ThingDef ParentName="BuildingBase">
    <defName>DankPyon_Turret_Ballista</defName>
    <label>Ballista</label>
    <description>Die Ballista wurde in der Antike entwickelt und ist eine mächtige Fernwaffe, die große Pfeile über große Entfernungen abfeuern kann. Das präzise Design ist sowohl bei Belagerungen als auch bei der Verteidigung effektiv und macht den Feinden Angst, muss aber nach jedem abgefeuerten Bolzen mühevoll nachgeladen werden.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Security/TurretBallista/TurretBallista_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.3, 2.3)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(1.5,0.35,1.4)</volume>
        <offset>(0,0,-0.05)</offset>
      </shadowData>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <uiIconPath>Security/TurretBallista/TurretBallista_MenuIcon</uiIconPath>
    <uiIconScale>0.95</uiIconScale>
    <size>(2,2)</size>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <blockWind>true</blockWind>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>1</Flammability>
      <WorkToBuild>3600</WorkToBuild>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Ballista bolts</fuelLabel>
        <fuelGizmoLabel>Ballista bolts</fuelGizmoLabel>
        <showFuelGizmo>true</showFuelGizmo>
        <fuelFilter>
          <thingDefs>
            <li>DankPyon_BallistaBolt</li>
          </thingDefs>
        </fuelFilter>
        <fuelConsumptionRate>1</fuelConsumptionRate>
        <fuelCapacity>5</fuelCapacity>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>0.2</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs ballista bolts</outOfFuelMessage>
        <fuelIconPath>Overlays/FuelBallistaBolt</fuelIconPath>
        <initialFuelPercent>1</initialFuelPercent>
      </li>
    </comps>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>

    <costList>
      <WoodLog>200</WoodLog>
      <DankPyon_IronIngot>60</DankPyon_IronIngot>
      <DankPyon_ComponentBasic>10</DankPyon_ComponentBasic>
    </costList>

    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>DankPyon_Gun_BallistaTurret</turretGunDef>
      <turretBurstCooldownTime>5</turretBurstCooldownTime>
      <turretBurstWarmupTime>2</turretBurstWarmupTime>
      <turretTopDrawSize>3.5</turretTopDrawSize>
      <turretTopOffset>(0, 0)</turretTopOffset>
    </building>
    <repairEffect>ConstructDirt</repairEffect>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>DankPyon_Ballista</li>
    </researchPrerequisites>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <placeWorkers>
      <li>PlaceWorker_ShowTurretRadius</li>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>DankPyon_Bullet_Ballista</defName>
    <label>Ballista-Bolzen</label>
    <graphicData>
      <texPath>Projectile/BallistaBullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2,1.2)</drawSize>
    </graphicData>
    <thingClass>DankPyon.Bullet_ExplosiveProperty</thingClass>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <speed>60</speed>
    </projectile>
    <modExtensions>
      <li Class="DankPyon.AdditionalProjectileProperties">
        <projectile2>
          <damageDef>DankPyon_Damage_BallistaBolt</damageDef>
          <damageAmountBase>20</damageAmountBase>
          <explosionRadius>1.9</explosionRadius>
          <soundExplode>BulletImpact_Wood</soundExplode>
          <armorPenetrationBase>0.20</armorPenetrationBase>
        </projectile2>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>DankPyon_Gun_BallistaTurret</defName>
    <label>Ballista</label>
    <description>Eine alte militärische Belagerungsmaschine in Form einer Armbrust, die auf einem Holzkonstrukt montiert ist.</description>
    <graphicData>
      <texPath>Security/TurretBallista/TurretBallista_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>45</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags Inherit="false">
      <li>DankPyon_Ballista</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DankPyon_Bullet_Ballista</defaultProjectile>
        <warmupTime>2</warmupTime>
        <minRange>4</minRange>
        <range>45</range>
        <soundCast>Bow_Large</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>
  
<!--========== Trebuchet ==========-->
<ThingDef Name="DankPyon_BaseTrebuchetBuilding" ParentName="BuildingBase" Abstract="True">					  
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Security/TurretTrebuchet/TurretTrebuchet_Base</texPath>
												 
      <drawSize>(4,4)</drawSize> 
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
					  
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <size>(3,3)</size>
							   
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <costList>
      <WoodLog>250</WoodLog>
      <DankPyon_IronIngot>90</DankPyon_IronIngot>
      <DankPyon_ComponentBasic>15</DankPyon_ComponentBasic>
    </costList>
    <inspectorTabs>
      <li>ITab_Shells</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>550</MaxHitPoints>
      <Flammability>1</Flammability>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <building>
      <turretBurstWarmupTime>4.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>42</turretBurstCooldownTime>
      <turretTopDrawSize>6</turretTopDrawSize>
      <turretTopOffset>(0, -1)</turretTopOffset>
      <buildingTags>
        <li>Artillery</li>
      </buildingTags>
    </building>					
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>DankPyon_Trebuchet</li>
    </researchPrerequisites>
    <uiIconScale>1.1</uiIconScale>
  </ThingDef>
  
<ThingDef ParentName="DankPyon_BaseTrebuchetBuilding">
    <defName>DankPyon_Turret_Trebuchet</defName>
    <label>Trebuchet</label>
    <description>Das Trebuchet nutzt eine starke Torsion, um Steine über eine große Entfernung zu schleudern und mit einer solchen Kraft Mauern zu zerstören. Das macht das Trebuchet zu einer furchterregenden Belagerungswaffe, die Verteidigungsanlagen verwüsten kann. Wo Belagerungsangreifer früher Palisaden unter feindlichen Raketen erklimmen mussten, können sie jetzt Öffnungen schaffen, bevor die Schlacht überhaupt beginnt. Wenn die Verteidiger sehen, dass das große Trebuchet auf den Feldern eingesetzt wird, sollten sie versuchen, es schnell zu zerstören.</description>
    <comps>
        <!--li Class="CompProperties_Refuelable">
