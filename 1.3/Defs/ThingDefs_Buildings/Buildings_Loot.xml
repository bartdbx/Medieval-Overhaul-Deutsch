<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
<!--==================== Base ====================-->
<ThingDef ParentName="BuildingBase" Name="DankPyon_LootBuildingBase" Abstract="True">
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>20</pathCost>
    <useHitPoints>true</useHitPoints>
    <minifiedDef>MinifiedThing</minifiedDef>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <clearBuildingArea>false</clearBuildingArea>

    <thingCategories>
        <li>DankPyon_BuildingsLoot</li>
    </thingCategories>
    <size>(1,1)</size>
    <building>
        <isEdifice>false</isEdifice>
    </building>

    <statBases>
      <Flammability>0</Flammability>
      <SellPriceFactor>1.10</SellPriceFactor>
      <MeditationFocusStrength>0.0</MeditationFocusStrength>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
   
    <tradeTags>
      <li>DankPyon_Loot</li>
    </tradeTags>

    <comps>
      <li Class="CompProperties_Styleable"/>
    </comps>
    <dominantStyleCategory MayRequire="Ludeon.RimWorld.Ideology">DankPyon_OldWorld</dominantStyleCategory>
    <modExtensions>
		<li Class="DankPyon.CannotBePlacedTogetherWithThisModExtension"></li>
	</modExtensions>
</ThingDef>

<!-- Chalice -->
<ThingDef ParentName="DankPyon_LootBuildingBase">
    <defName>DankPyon_Building_ChaliceSilver</defName>
    <label>Kelch, silberner</label>
    <graphicData>
      <texPath>Buildings/Ruin/ChaliceSilver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    
    <statBases>
        <MaxHitPoints>70</MaxHitPoints>
        <Beauty>26</Beauty>
        <Mass>1</Mass>
        <WorkToMake>4000</WorkToMake>
    </statBases>

    <costList>
        <Silver>30</Silver>
    </costList>
</ThingDef>

