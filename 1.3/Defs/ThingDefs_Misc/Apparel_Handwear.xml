<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ===== Leather Gloves ===== -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>DankPyon_Handwear_GlovesLeather</defName>
		<label>Handschuhe</label>
		<description>Gegerbtes Leder, genäht, um sich der Hand anzupassen. Bietet minimalen Schutz. Das Tragen von Lederhandschuhen erhöht die Arbeitsgeschwindigkeit und die Schussgenauigkeit.</description>
		<graphicData>
			<texPath>Apparel/Handwear/GlovesLeather</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>

		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>

		<statBases>
			<MaxHitPoints>115</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal> 
			<ShootingAccuracyPawn>2</ShootingAccuracyPawn>
		</equippedStatOffsets>

		<thingCategories Inherit="False">
			<li>DankPyon_Handwear</li>
		</thingCategories>

		<apparel>
			<bodyPartGroups>
				<li>Hands</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
					<li>DankPyon_BrigandtThug</li>
				<li>DankPyon_BrigandRaider</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_MercenaryHeavy</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_Billman</li>

				<li>MedievalBasic</li>
				<li>MedievalAdvanced</li>
                <li>MedievalMilitaryBasic</li>
                <li>MedievalMilitaryDecent</li>
            </tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>

		<recipeMaker>
			<researchPrerequisite>DankPyon_ProtectiveClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
					<li>DankPyon_TailorsBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

